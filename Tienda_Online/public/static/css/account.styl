   body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .main {
        width: 250px;
        background-color: #748e81;
        height: 100vh; /* Ocupa toda la altura disponible */
        position: fixed; /* Permanece fijo en la pantalla */
        top: 0;
        left: 0;
        overflow-x: hidden; /* Oculta el scroll horizontal si es necesario */
    }

    .main header {
        padding: 10px;
        background-color: #2B7551;
        color: #7aa08e;
        text-align: center;
    }

    .main ul {
        list-style-type: none;
        padding: 0;
    }

    .main ul li {
        padding: 10px;
        border-bottom: 1px solid #ccc;
    }

    .main ul li a {
        text-decoration: none;
        color: #333;
    }

    .main ul li a:hover {
        background-color: #ddd;
    }

    .container {
        justify-content: center;
        margin-left: 250px; /* Ajusta el contenido para que no quede debajo de la barra lateral */
        padding: 20px;
    }

    .orders{
        justify-content: center;
        margin-left: 20%; /* Ajusta el contenido para que no quede debajo de la barra lateral */
        padding: 10px;
    }
      